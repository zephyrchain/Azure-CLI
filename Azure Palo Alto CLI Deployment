#Create a Resource Group
az group create --name RG-PAN-PRD-EUS-001 --location eastus --tags Role="Resource Group" Environment="Production" Type="Hub"

#Create a Virtual Network
az network vnet create --resource-group RG-PAN-PRD-EUS-001 --location eastus --name VNET-HUB-PRD-EUS-001 --address-prefixes 10.0.0.0/21 --tags Role="Hub" AddressSpace="10.0.0.0/21"

#Create 3 Subnets in the virtual network. The Subnets are for the Mgmt, Untrust and Trust interfaces
az network vnet subnet create --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --name SUBNET-MGMT-PRD-EUS-001 --address-prefix 10.0.0.0/24
az network vnet subnet create --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --name SUBNET-UNTRST-PRD-EUS-001 --address-prefix 10.0.1.0/24
az network vnet subnet create --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --name SUBNET-TRST-PRD-EUS-001 --address-prefix 10.0.2.0/24

#Create a Public IP Address. This will be used for the Management Interface of the VM-Series
az network public-ip create --name PIP-MGMT-PRD-EUS-001 --resource-group RG-PAN-PRD-EUS-001 --location eastus --dns-name panmgmt001 --allocation-method Static --sku Standard --zone 2 --tags Role="Management Public IP" DNSLabel="panmgmt001"

#Create and Configure Multiple Network Interfaces
az network nic create --resource-group RG-PAN-PRD-EUS-001 --location eastus --name NIC-MGMT-PRD-EUS-001 --subnet /subscriptions/Add Subscription ID Here/resourceGroups/RG-PAN-PRD-EUS-001/providers/Microsoft.Network/virtualNetworks/VNET-HUB-PRD-EUS-001/subnets/SUBNET-MGMT-PRD-EUS-001 --tags Role="Firewall NIC - Management" SubnetRole="Management"
az network nic create --resource-group RG-PAN-PRD-EUS-001 --location eastus --name NIC-UNTRST-PRD-EUS-001 --subnet /subscriptions/Add Subscription ID Here/resourceGroups/RG-PAN-PRD-EUS-001/providers/Microsoft.Network/virtualNetworks/VNET-HUB-PRD-EUS-001/subnets/SUBNET-UNTRST-PRD-EUS-001 --ip-forwarding true --tags Role="Firewall NIC - Untrust" SubnetRole="Untrust"
az network nic create --resource-group RG-PAN-PRD-EUS-001 --location eastus --name NIC-TRST-PRD-EUS-001 --subnet /subscriptions/Add Subscription ID Here/resourceGroups/RG-PAN-PRD-EUS-001/providers/Microsoft.Network/virtualNetworks/VNET-HUB-PRD-EUS-001/subnets/SUBNET-TRST-PRD-EUS-001 --ip-forwarding true --tags Role="Firewall NIC - Trust" SubnetRole="Trust"

#Create Network Security Groups
az network nsg create --resource-group RG-PAN-PRD-EUS-001 --location eastus --name NSG-PAN-PRD-EUS-001 --tags Role="Management NSG" Purpose="Restrict SSH and HTTPS"

#Create Network Security Group Rule. This will be used for inbound management access - Modify source IP
az network nsg rule create -g RG-PAN-PRD-EUS-001 --nsg-name NSG-PAN-PRD-EUS-001 -n mgmtaccess --priority 110 --source-address-prefixes "198.51.100.10" --source-port-ranges '*' --destination-address-prefixes '*' --destination-port-ranges 22 443 --access Allow --protocol Tcp --description "Allow from any RFC 1918 address on 22 and 443"

#Add Network Security Group to MGMT NIC
az network nic update -g RG-PAN-PRD-EUS-001 -n NIC-MGMT-PRD-EUS-001 --network-security-group NSG-PAN-PRD-EUS-001

#Check SKU avalibility in region
az vm list-skus --location eastus --output table

#Get the Legal Terms
az vm image terms show --publisher paloaltonetworks --offer vmseries1 --plan bundle2

#Accept the Legal Terms
az vm image terms accept --publisher paloaltonetworks --offer vmseries1 --plan bundle2 
 
#Create VM-Series and Assign NICs During Deployment
az vm create --resource-group RG-PAN-PRD-EUS-001 --name VM-PAN-PRD-EUS-001 --location eastus --nics NIC-MGMT-PRD-EUS-001 NIC-UNTRST-PRD-EUS-001 NIC-TRST-PRD-EUS-001 --size Standard_D3_V2 --image paloaltonetworks:vmseries1:bundle2:8.1.0 --plan-name bundle2 --plan-product vmseries1 --plan-publisher paloaltonetworks --admin-username panadmin --generate-ssh-keys --zone 2 --tags Role="Firewall Virtual Machine" ImageReference="PaloAlto-bundle2:8.1.0" HighAvailability="SingleAZ" ManagementAccess="SSH,HTTPS"

#SSH key files '/home/username/.ssh/id_rsa' and '/home/username/.ssh/id_rsa.pub' have been generated under ~/.ssh to allow SSH access to the VM

#Create local network gateway
az network local-gateway create -g RG-PAN-PRD-EUS-001 -n LNG-S2S-PRD-EUS-001 --gateway-ip-address 198.51.100.10 --local-address-prefixes 10.100.200.0/24 20.30.40.0/24 --asn 65515 --bgp-peering-address 10.100.200.45 --tags Role="Local Network Gateway" BGPStatus="Enabled"

#Create a Public IP for the Virtual Network Gateway
az network public-ip create -n PIP-VNG-PRD-EUS-001 -g RG-PAN-PRD-EUS-001 --zone 2 --tags Role="VNG Public IP" DNSLabel="001"
az network public-ip create -n PIP-VNG-PRD-EUS-002 -g RG-PAN-PRD-EUS-001 --zone 2 --tags Role="VNG Public IP" DNSLabel="002"

#Create a Virtual Network Gateway Subnet
az network vnet subnet create --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --name GatewaySubnet --address-prefix 10.0.7.0/27

#Retrieve the IDs of the Public IP addresses
PIP_ID_1=$(az network public-ip show --name PIP-VNG-PRD-EUS-001 --resource-group RG-PAN-PRD-EUS-001 --query id -o tsv)
PIP_ID_2=$(az network public-ip show --name PIP-VNG-PRD-EUS-002 --resource-group RG-PAN-PRD-EUS-001 --query id -o tsv)

#Create a Virtual Network Gateway - Adjust the BGP peer - do not continue until VNG is fully deployed or it will fail
az network vnet-gateway create --resource-group RG-PAN-PRD-EUS-001 --name VNG-S2S-PRD-EUS-001 --location eastus --public-ip-addresses $PIP_ID_1 $PIP_ID_2 --vnet VNET-HUB-PRD-EUS-001 --gateway-type Vpn --vpn-type RouteBased --sku VpnGw1AZ --no-wait --bgp-peering-address 10.10.10.10 --asn 65515 --tags Role="Virtual Network Gateway" BGPStatus="Enabled"

#Create S2S connection - add psk for s2s
#az network vpn-connection create --name VPN-CONNECTION-S2S-PRD-EUS-001 --resource-group RG-PAN-PRD-EUS-001 --vnet-gateway1 VNG-S2S-PRD-EUS-001 --location eastus --shared-key "YourSharedKeyHere" --local-gateway2 LNG-S2S-PRD-EUS-001 --tags Role="Site-to-Site VPN Connection"

#Add Route Table to gateway subnet: To be determined
#Create a route table
az network route-table create --resource-group RG-PAN-PRD-EUS-001 --name RT-PAN-PRD-EUS-001 --tags Role="VNG Route Table" NextHop="Firewall"

#Create Routes - To be determined
az network route-table route create --name RouteToPan --resource-group RG-PAN-PRD-EUS-001 --route-table-name RT-PAN-PRD-EUS-001 --address-prefix "10.0.0.0/18" --next-hop-type VirtualAppliance --next-hop-ip-address 10.0.1.4 

#Add route to subnet - To be determined
az network vnet subnet update --vnet-name VNET-HUB-PRD-EUS-001 --name GatewaySubnet --resource-group RG-PAN-PRD-EUS-001 --route-table RT-PAN-PRD-EUS-001

#ROUTE SERVER FOR BGP
# Add RouteServerSubnet to an existing VNet
az network vnet subnet create --resource-group 'RG-PAN-PRD-EUS-001' --vnet-name 'VNET-HUB-PRD-EUS-001' --name 'RouteServerSubnet' --address-prefixes '10.0.7.64/26'

#Store the subnet ID in a variable for later use
subnetId=$(az network vnet subnet show --name 'RouteServerSubnet' --resource-group 'RG-PAN-PRD-EUS-001' --vnet-name 'VNET-HUB-PRD-EUS-001' --query id -o tsv)

#Create a Standard public IP for Route Server
az network public-ip create --resource-group 'RG-PAN-PRD-EUS-001' --name 'PIP-RSVR-PRD-EUS-001' --sku Standard --version 'IPv4' --tags Role="Route Server Public IP" DNSLabel="001"

#Create the Route Server
az network routeserver create --name 'RSVR-CORE-PRD-EUS-001' --resource-group 'RG-PAN-PRD-EUS-001' --hosted-subnet $subnetId --public-ip-address 'PIP-RSVR-PRD-EUS-001' --tags Role="Azure Route Server" Purpose="Dynamic BGP Route Exchange"

#Create BGP peering with the network virtual appliance
az network routeserver peering create --name 'VM-PAN-PRD-EUS-001' --peer-ip '10.0.2.4' --peer-asn '64999' --routeserver 'RSVR-CORE-PRD-EUS-001' --resource-group 'RG-PAN-PRD-EUS-001'

#Enable branch-to-branch route exchange
az network routeserver update --name 'RSVR-CORE-PRD-EUS-001' --resource-group 'RG-PAN-PRD-EUS-001' --allow-b2b-traffic true

#PRIVATE DNS RESOLVER
#Create an inbound subnet
az network vnet subnet create --name SUBNET-INBOUND-PRD-EUS-001 --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --address-prefixes 10.0.7.32/28 --delegations "Microsoft.Network/dnsResolvers"
#Get the subnet ID
subnet_id=$(az network vnet subnet show --name SUBNET-INBOUND-PRD-EUS-00 --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --query id -o tsv)

#Create an outbound subnet
az network vnet subnet create --name SUBNET-OUTBOUND-PRD-EUS-001 --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --address-prefixes 10.0.7.48/28 --delegations "Microsoft.Network/dnsResolvers"
#Get the subnet ID
subnet_id=$(az network vnet subnet show --name SUBNET-OUTBOUND-PRD-EUS-001 --resource-group RG-PAN-PRD-EUS-001 --vnet-name VNET-HUB-PRD-EUS-001 --query id -o tsv)

#Allow dynamic extension install w/o prompts and ensure the dns-resolver extension is present
az config set extension.dynamic_install_allow_preview=true
az config set extension.use_dynamic_install=yes_without_prompt
az extension add --name dns-resolver --upgrade --yes

#Create the DNS resolver 
az dns-resolver create --name "DNSR-HUB-PRD-EUS-001" --location "eastus" --id "/subscriptions/Add Subscription ID Here/resourceGroups/RG-PAN-PRD-EUS-001/providers/Microsoft.Network/virtualNetworks/VNET-HUB-PRD-EUS-001" --tags Environment="Production" ResourceType="DNS Resolver" Project="PAN" --resource-group "RG-PAN-PRD-EUS-001"

#Create the inbound/outbound endpoint
az dns-resolver inbound-endpoint create --dns-resolver-name "DNSR-HUB-PRD-EUS-001" --name "INBOUND-HUB-PRD-EUS-001" --location "eastus" --ip-configurations '[{"private-ip-allocation-method": "Dynamic", "id": "/subscriptions/Add Subscription ID Here/resourceGroups/RG-PAN-PRD-EUS-001/providers/Microsoft.Network/virtualNetworks/VNET-HUB-PRD-EUS-001/subnets/SUBNET-INBOUND-PRD-EUS-001"}]' --tags Role="Azure Private DNS Resolver" EndpointType="Inbound" --resource-group "RG-PAN-PRD-EUS-001"
az dns-resolver outbound-endpoint create --dns-resolver-name "DNSR-HUB-PRD-EUS-001" --name "OUTBOUND-HUB-PRD-EUS-001" --location "eastus" --id "/subscriptions/Add Subscription ID Here/resourceGroups/RG-PAN-PRD-EUS-001/providers/Microsoft.Network/virtualNetworks/VNET-HUB-PRD-EUS-001/subnets/SUBNET-OUTBOUND-PRD-EUS-001" --tags Environment="Production" ResourceType="DNS Outbound Endpoint" Project="PAN" --resource-group "RG-PAN-PRD-EUS-001" --tags Role="Azure Private DNS Resolver" EndpointType="Outbound"

